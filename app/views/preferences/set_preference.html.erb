<%= form_for :user_preference, url: save_preference_preferences_path do |f| %>

  <div class="row-fluid">
  	<div class="span12">
      <div class="span4"></div>
      <br/>
	    <div class="span8">
	    	<% Afinity.all.each do |afinity| %>
		    	<%= check_box_tag "afinity[]", afinity.name, current_user.afinity?(afinity) %>
		    	<strong><%= afinity.name %></strong>
		    <% end %>
        <br/>
        <div class="clear"></div>
				<%= f.submit "Set Preference", class: "btn btn-success" %> 	
	    </div>
	  </div>
	</div>
<% end %>
